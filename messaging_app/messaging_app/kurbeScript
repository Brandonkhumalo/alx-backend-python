#!/bin/bash

# kurbeScript - Start a local Kubernetes cluster and verify it

# Check if minikube is installed
if ! command -v minikube &> /dev/null; then
    echo "âŒ Minikube is not installed. Please install it first."
    exit 1
fi

# Check if kubectl is installed
if ! command -v kubectl &> /dev/null; then
    echo "âŒ kubectl is not installed. Please install it first."
    exit 1
fi

# Start Minikube
echo "ğŸš€ Starting Minikube cluster..."
minikube start

# Check cluster status
echo "ğŸ” Verifying cluster info..."
kubectl cluster-info

# Get list of pods
echo "ğŸ“¦ Retrieving pods..."
kubectl get pods --all-namespaces

echo "âœ… Kubernetes cluster setup complete."
